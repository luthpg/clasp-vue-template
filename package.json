{
  "name": "clasp-vite-vue-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=v18.0",
    "npm": ">=v10.0"
  },
  "scripts": {
    "dev": "vite",
    "tsc": "vue-tsc",
    "config:dev": "ncp .clasp-dev.json .clasp.json && ncp .env-dev.env .env",
    "config:prod": "ncp .clasp-prod.json .clasp.json && ncp .env-prod.env .env",
    "build": "npm run tsc && vite build",
    "preview": "vite preview",
    "push:clasp": "clasp push",
    "push": "npm run lint && npm run format && npm run test && npm run build && npm run push:clasp",
    "push:dev": "npm run config:dev && npm run push",
    "push:prod": "npm run config:prod && npm run push",
    "deploy": "clasp deploy",
    "redeploy": "dotenv cross-var \"clasp deploy -i $GAS_DEPLOYMENT_ID\"",
    "open:script": "clasp open",
    "open:web": "clasp open --webapp",
    "test": "vitest",
    "lint": "eslint --ext .ts,.vue src/ && eslint --ext .ts server",
    "fix": "eslint --fix --ext .ts,.vue src/ && eslint --fix --ext .ts server",
    "format": "prettier --write \"**/*.+(js|json|ts|vue)\""
  },
  "dependencies": {
    "vue": "^3.3.11"
  },
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@meforma/vue-toaster": "^1.3.0",
    "@testing-library/vue": "^8.0.1",
    "@types/google-apps-script": "^1.0.78",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-vue": "^4.6.1",
    "@vue/test-utils": "^2.4.3",
    "cross-var": "^1.1.0",
    "dayjs": "^1.11.10",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-googleappsscript": "^1.0.5",
    "eslint-plugin-vitest": "^0.3.20",
    "eslint-plugin-vitest-globals": "^1.4.0",
    "eslint-plugin-vue": "^9.19.2",
    "happy-dom": "^12.10.3",
    "ncp": "^2.0.0",
    "prettier": "^3.1.1",
    "stylus-loader": "^7.1.3",
    "typescript": "5.1.x",
    "vite": "^5.0.8",
    "vite-plugin-singlefile": "^0.13.5",
    "vite-tsconfig-paths": "^4.2.3",
    "vitest": "^1.1.1",
    "vue-tsc": "^1.8.25",
    "vuetify": "^3.4.9"
  }
}
